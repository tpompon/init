
# Check if the command is valid
if [ $# != 1 ]; then
	echo "Usage: $0 [user] (delete user while logged in)"
fi

# Check if the user is logged on
if ; then

fi

# Kill processes
killall -KILL -u $1

# Block the user
sudo passwd -l $1

# Delete the user
userdel -r $1

